{
  "extends": ["stylelint-config-standard","stylelint-config-rational-order","stylelint-config-standard-scss"],
  "plugins": [
    "stylelint-selector-bem-pattern"
],
"ignoreFiles": [
  "src/scss/common/_nullstyle.scss"
],
"rules": {
 "at-rule-no-unknown": null,
 "keyframes-name-pattern":"[_a-z]",
 "selector-pseudo-element-no-unknown":true,
 "no-empty-source": true,
 "color-no-hex": true,
  "selector-class-pattern":
"^(?:(?:o|c|u|t|s|is|has|_|js|qa)-)?[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*(?:__[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*)?(?:--[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*)?(?:\\[.+\\])?$",
"scss/double-slash-comment-empty-line-before": "never",
"rule-empty-line-before": [
  "always",
  {
    "except": [
      "after-single-line-comment",
      "inside-block"
    ]
  }
],
"color-function-notation":[
  "modern"
]
}
}